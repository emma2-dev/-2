<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.MessageMapper">
    
    <resultMap id="BaseResultMap" type="com.blog.entity.Message">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="like_count" property="likeCount"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="user_name" property="userName"/>
        <result column="user_avatar" property="userAvatar"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.blog.entity.Message" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO message (user_id, content, like_count, status)
        VALUES (#{userId}, #{content}, #{likeCount}, #{status})
    </insert>
    
    <select id="selectById" resultMap="BaseResultMap">
        SELECT m.*, u.nickname as user_name, u.avatar as user_avatar
        FROM message m
        LEFT JOIN user u ON m.user_id = u.id
        WHERE m.id = #{id}
    </select>
    
    <delete id="deleteById">
        DELETE FROM message WHERE id = #{id}
    </delete>
    
    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT m.*, u.nickname as user_name, u.avatar as user_avatar
        FROM message m
        LEFT JOIN user u ON m.user_id = u.id
        WHERE m.status = 1
        ORDER BY m.create_time DESC
        LIMIT #{offset}, #{limit}
    </select>
    
    <select id="countMessages" resultType="java.lang.Long">
        SELECT COUNT(*) FROM message WHERE status = 1
    </select>
    
    <update id="increaseLikeCount">
        UPDATE message SET like_count = like_count + 1 WHERE id = #{id}
    </update>
    
</mapper>



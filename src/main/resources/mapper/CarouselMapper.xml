<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.CarouselMapper">

    <resultMap id="BaseResultMap" type="com.blog.entity.Carousel">
        <id column="id" property="id" />
        <result column="img_url" property="imgUrl" />
        <result column="target_url" property="targetUrl" />
        <result column="title" property="title" />
        <result column="sort" property="sort" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM carousel ORDER BY sort DESC, id ASC
    </select>

    <select id="selectDisplay" resultMap="BaseResultMap">
        SELECT * FROM carousel WHERE status = 1 ORDER BY sort DESC, id ASC
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM carousel WHERE id = #{id} LIMIT 1
    </select>

    <insert id="insert" parameterType="com.blog.entity.Carousel" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO carousel (img_url, target_url, title, sort, status, create_time, update_time)
        VALUES (#{imgUrl}, #{targetUrl}, #{title}, #{sort}, #{status}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.blog.entity.Carousel">
        UPDATE carousel
        <set>
            <if test="imgUrl != null">img_url = #{imgUrl},</if>
            <if test="targetUrl != null">target_url = #{targetUrl},</if>
            <if test="title != null">title = #{title},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        , update_time = NOW() 
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM carousel WHERE id = #{id}
    </delete>
</mapper>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.TagMapper">
    
    <resultMap id="BaseResultMap" type="com.blog.entity.Tag">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="color" property="color"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.blog.entity.Tag" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tag (name, color)
        VALUES (#{name}, #{color})
    </insert>
    
    <select id="selectById" resultType="com.blog.entity.Tag">
        SELECT * FROM tag WHERE id = #{id}
    </select>
    
    <update id="update" parameterType="com.blog.entity.Tag">
        UPDATE tag
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="color != null">color = #{color},</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteById">
        DELETE FROM tag WHERE id = #{id}
    </delete>
    
    <select id="selectAll" resultType="com.blog.entity.Tag">
        SELECT * FROM tag ORDER BY create_time DESC
    </select>
    
    <select id="selectByArticleId" resultType="com.blog.entity.Tag">
        SELECT t.* FROM tag t
        INNER JOIN article_tag at ON t.id = at.tag_id
        WHERE at.article_id = #{articleId}
    </select>
    
    <insert id="insertArticleTag">
        INSERT INTO article_tag (article_id, tag_id)
        VALUES (#{articleId}, #{tagId})
    </insert>
    
    <delete id="deleteArticleTagsByArticleId">
        DELETE FROM article_tag WHERE article_id = #{articleId}
    </delete>
    
    <select id="selectHotTags" resultType="com.blog.entity.Tag">
        SELECT t.*, COUNT(at.article_id) as article_count
        FROM tag t
        LEFT JOIN article_tag at ON t.id = at.tag_id
        LEFT JOIN article a ON at.article_id = a.id AND a.status = 2
        GROUP BY t.id
        ORDER BY article_count DESC, t.create_time DESC
        LIMIT #{limit}
    </select>
    
</mapper>


